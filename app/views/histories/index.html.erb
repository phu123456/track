<div class="container-fluid">
  <div class="row" style="padding-top:50px;">
<div class="col-md-3">
<div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical" style="color:white;">
  <a class="nav-item nav-link disabled" style="color:grey; letter-spacing: 1px; text-transform: uppercase;" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Histories Dashboard</a>
  <a class="nav-link active" style="color:white;" id="v-pills-overview-tab" data-toggle="pill" href="#v-pills-overview" role="tab" aria-controls="v-pills-overview" aria-selected="false">Overview</a>
</div>
</div>
<div class="col-md-9">
<div class="tab-content" id="v-pills-tabContent">
  <div class="tab-pane show active" id="v-pills-overview" role="tabpanel" aria-labelledby="v-pills-overview-tab">
    <table class="table table-hover my_table">
      <thead>
        <tr>
          <th>Category</th>
          <th>Vehicle</th>
          <th>Attribute</th>
          <th>Before</th>
          <th>After</th>
          <th>Changed By</th>
          <th>Date</th>
        </tr>
      </thead>

      <tbody style="color: #cfd2da;">
        <% @histories.each do |history| %>
          <tr>
            <td><%= history.category %></td>
            <td><%= Vehicle.find(history.vehicle).plate %></td>
            <td><%= history.attribute_name %></td>
            <td><%= history.before_value %></td>
            <td><%= history.after_value %></td>
            <td><%= history.email %></td>
            <td><%= history.created_at.strftime("%F") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <!-- <div class="tab-pane fade" id="v-pills-graphs" role="tabpanel" aria-labelledby="v-pills-graphs-tab"></div> -->
  <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab"></div>
</div>
</div>
</div>

</div>

<style>

.page-link {
  color: #51586a;
  background-color: #252830;
  border: 1px solid #434857;
}

.page-item.disabled .page-link{
  background-color: #51586a;
  border: 1px solid #ddd;
}

.my_btn {
      width: 55%;
  }
.nav-pills .nav-link.active {
  color: #fff;
  background-color: #1997c6;
}

.table th {
  color: white;
}
</style>
<script>
  $( document ).ready(function() {
      $('.history').addClass('active');
  });
</script>
