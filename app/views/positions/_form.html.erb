<%= form_with(model: position, local: true) do |form| %>
  <% if position.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(position.errors.count, "error") %> prohibited this position from being saved:</h2>

      <ul>
      <% position.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :latitude %>
    <%= form.text_field :latitude, id: :position_latitude %>
  </div>

  <div class="field">
    <%= form.label :longitude %>
    <%= form.text_field :longitude, id: :position_longitude %>
  </div>

  <div class="field">
    <%= form.label :speed %>
    <%= form.number_field :speed, id: :position_speed %>
  </div>

  <div class="field">
    <%= form.label :imei %>
    <%= form.text_area :imei, id: :position_imei %>
  </div>

  <div class="field">
    <%= form.label :period %>
    <%= form.date_select :period, id: :position_period %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
