<p id="notice"><%= notice %></p>

<h1>Positions</h1>

<table>
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Speed</th>
      <th>Imei</th>
      <th>Time</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.latitude %></td>
        <td><%= position.longitude %></td>
        <td><%= position.speed %></td>
        <td><%= position.imei %></td>
        <td><%= position.period.try(:strftime, "%H %M %S") %></td>
        <td><%= position.period.try(:strftime, "%d/%m/%Y") %></td>
        <td><%= link_to 'Show', position %></td>
        <td><%= link_to 'Edit', edit_position_path(position) %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

