<div class="container-fluid">
  <div class="row" style="padding-top:50px;">
<div class="col-md-3">
<div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical" style="color:white;">
  <a class="nav-item nav-link disabled" style="color:grey; letter-spacing: 1px; text-transform: uppercase;" >Tyres Dashboard</a>
  <a class="nav-link active" style="color:white;" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Tyres In Use</a>
  <a class="nav-link" style="color:white;" id="v-pills-available-tab" data-toggle="pill" href="#v-pills-available" role="tab" aria-controls="v-pills-available" aria-selected="false">Tyres Available</a>
  <a class="nav-link" style="color:white;" id="v-pills-destroyed-tab" data-toggle="pill" href="#v-pills-destroyed" role="tab" aria-controls="v-pills-destroyed" aria-selected="false">Tyres Destroyed</a>
  <a class="nav-link" style="color:white;" id="v-pills-graphs-tab" data-toggle="pill" href="#v-pills-graphs" role="tab" aria-controls="v-pills-graphs" aria-selected="false">Tyre on Average Failure</a>
  <!-- <form action="<%= new_tyre_path %>"> -->
  <a class="nav-link" style="color:white;" href="<%= new_tyre_path %>"><i class="fa fa-plus"></i> New Tyre</a>
  <!-- </form> -->
  <!-- <form action="<%= new_tyre_path %>">
    <button class="btn btn-info" type="submit"><i class="fa fa-plus"></i> Add Tyre</button>
  </form> -->
</div>
</div>
<div class="col-md-9">
<div class="tab-content" id="v-pills-tabContent">
  <div class="tab-pane show active" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-home-tab">
      <table class="table in-used-table my_table" id="myTable">
        <thead>
          <tr bgcolor="#006dcc">
            <th onclick="sortTable(0)">Brand</th>
            <th onclick="sortTable(1)">Serial</th>
            <th onclick="sortTable(2)">Status</th>
            <th onclick="sortTable(3)">Total distance</th>
            <th onclick="sortTable(4)">Vehicle</th>
            <th onclick="sortTable(5)">Position</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @tyres.where(status: "in used").each do |tyre| %>
            <tr class ="in-used-table">
              <td><%= tyre.brand %></td>
              <td><%= tyre.serial %></td>
              <td><%= tyre.status %></td>
              <td><%= tyre.total_distance %> km</td>
              <td><%= Vehicle.find(tyre.vehicle_id).plate %></td>
              <td><%= tyre.position %></td>
              <td><%= link_to 'Manage', tyre, class: "btn-sm btn-info" %></td>
              <td><%= link_to 'Destroy', tyre, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  <div class="tab-pane fade" id="v-pills-available" role="tabpanel" aria-labelledby="v-pills-available-tab">
    <table class="table my_table un-use-table">
      <thead>
        <tr bgcolor="#5cb85c">
          <th>Brand</th>
          <th>Serial</th>
          <th>Status</th>
          <th>Total Distance</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tyres.where(status: "available").each do |tyre| %>
          <tr>
            <td><%= tyre.brand %></td>
            <td><%= tyre.serial %></td>
            <td><%= tyre.status %></td>
            <td><%= tyre.total_distance %> km</td>
            <td><%= link_to 'Manage', tyre, class: "btn-sm btn-warning" %></td>
            <td><%= link_to 'Destroy', tyre, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="tab-pane fade" id="v-pills-destroyed" role="tabpanel" aria-labelledby="v-pills-destroyed-tab">
    <table class="table my_table destroyed-table">
      <thead>
        <tr bgcolor="red">
          <th>Brand</th>
          <th>Serial</th>
          <th>Status</th>
          <th>Total Distance</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody style="color: #cfd2da;">
        <% @tyres.where(status: "destroyed").each do |tyre| %>
          <tr>
            <td><%= tyre.brand %></td>
            <td><%= tyre.serial %></td>
            <td><%= tyre.status %></td>
            <td><%= tyre.total_distance %> km</td>
            <td><%= link_to 'Destroy', tyre, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <div class="tab-pane fade" id="v-pills-graphs" role="tabpanel" aria-labelledby="v-pills-graphs-tab">
     <select id="plate" style="width:115px;" class="js-example-basic-single" name="state">
        <% @tyres.pluck(:brand).uniq.each do |brand| %>
          <option value="<%= brand %>"> <%= brand %> </option>
        <% end %>
      </select>
      <%= column_chart Tyre.group(:brand).where(status:"destroyed").average(:total_distance), id: 'chart-id', xtitle: "Distance Till Destroyed", ytitle: "Brand", class: "chartt" %>
  </div>
</div>
</div>
</div>

</div>

<style >

  .page-link {
    color: #51586a;
    background-color: #252830;
    border: 1px solid #434857;
  }

  .page-item.disabled .page-link{
    background-color: #51586a;
    border: 1px solid #ddd;
  }

  .my_btn {
        width: 55%;
    }
  .nav-pills .nav-link.active {
    color: #fff;
    background-color: #1997c6;
  }

  .table th {
    color: white;
  }

  .my_table tr {
    color: white;
  }
</style>

<script>

  $( document ).ready(function() {
      $('.tyre').addClass('active');
  });

  $('.btn').click(function () {
       $('.btn').removeClass('active');
       $(this).toggleClass('active');
   });
</script>
